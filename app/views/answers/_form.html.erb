<div class="card mt-3 bg-light">
  <div class="card-body">
    <%= form_with model: [question,answer] do |f| %>
      <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :body %>
        </div>

        <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control', rows: 4 %>
        </div>
      </div>

      <%= f.submit "Submit answer!", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>