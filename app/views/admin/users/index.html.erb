<%= provide :page_title, "Admin#users" %>
<% currently_at "Admin"%>

<h1 class="mb-4 text-white">Admin users</h1>

<div class="mb-3">
  <%= link_to 'Download zipped XLSX', admin_users_path(format: :zip),
  class: 'btn btn-info' %>
</div>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Created_at</th>
      <th scope="col">Updated_at</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'user', collection: @users, as: :user %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>

<h2 class="mb-3 text-white">Upload users from XLSX</h2>

<%= form_with url: admin_users_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :archive, 'Select archive',class: 'text-white' %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Upload!', class: 'btn btn-primary' %>
<% end %>