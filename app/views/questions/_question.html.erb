<article class="card mb-3 mt-3 bg-light">
    <div class="card-body">
      <h4><%= question.title %></h2>

      <section class="card-text">
        <p class="my-2">
          <%= truncate question.body, length: 100,
           omission: "......" %>
        </p>

        <time>
          <small><%= question.time_formatted %></small>
        </time>
      </section>

      <div class="btn-group">
        <%= link_to t('global.button.show'), question_path(question), class: 'btn btn-success' %> 
        <%= link_to t('global.button.edit'), edit_question_path(question), class: 'btn btn-warning' %>
        <%= link_to t('global.button.delete'), question_path(question), class: 'btn btn-danger',
          data: {method: :delete, confirm: t('global.dialog.delete')} %>
      </div>
    </div>
  </article>