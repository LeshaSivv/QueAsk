<%= provide :page_title, "Que\##{@question.id}" %>
<% currently_at %>

<article class="card mt-3 bg-light">
  <div class="card-body">
    <h3 class="mb-4"><%= @question.title %></h3>
      <p><%= @question.body %></p>
      <p>Создан: <%= @question.time_formatted %></p>
      <div class="btn-group">
        <%= link_to 'Edit', edit_question_path(@question), class: "btn btn-warning"%>
        <%= link_to 'Delete', question_path(@question), class: "btn btn-danger",
        data: {method: :delete, confirm: 'Sure?'} %>
      </div>
  </div>
</article>
<hr class="my-3">
<h2>Write your answer</h2>

<%= render 'shared/errors', object: @answer%>

<div class="card mt-3 bg-light">
  <div class="card-body">
    <%= form_with model: [@question,@answer] do |f| %>
      <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :body %>
        </div>

        <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control', rows: 4 %>
        </div>
      </div>

      <%= f.submit "Submit answer!", class: 'btn btn-info' %>
    <% end %>
  </div>
</div>

<hr class="my-3">
<h2>Answers</h2>

<%= render partial: "answers/answer", collection: @answers, as: :answer, locals:{question: @question}%>


